<div class="chat-page">

  <div class="chat-bar">  
    <% @conversations.each do |conversation| %>
      <% if @user.id == conversation.user1_id %>
        <%= cl_image_tag conversation.user2.image.key, height: 25, width: 25, crop: :fill, class: "chat-avatar-small" %>
        <%= link_to conversation.user2.first_name, conversation %>  
      <% elsif @user.id == conversation.user2_id %>  
        <%= cl_image_tag conversation.user1.image.key, height: 25, width: 25, crop: :fill, class: "chat-avatar-small" %>
        <%= link_to conversation.user1.first_name, conversation %> 
      <% end %> 
    <% end %> 
  </div>

  <div class="chatroom">
    <div class="chat-part" id="messages" data-chatroom-id="<%= @conversation.id %>">
      <% @conversation.messages.each do |message| %>
      <%= render "messages/message", message: message %>
      <% end %>
    </div>
    <div class="form">
      <%= simple_form_for [ @conversation, @message ], remote: true, authenticity_token: true do |f| %>
        <%= f.text_field :contents, label: false, placeholder: "Type your message here", class: 'type-box' %>
        <div class="buttons">
          <%= f.button :submit, "Send Message", class: 'submit-button' %>
          <%= link_to "Send Calendar Invite", new_event_path, class: 'calendar-button' %>
        </div>
        <% end %>
    </div>
  </div>
</div>