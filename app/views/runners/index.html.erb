<div class="container card-container">
  <div class="row">
    <div class="col-md">
          <h1 class="header-style">Runner Listings</h1>
          <% @runners.each do |runner| %>

           <%= link_to runner_path(runner) do cl_image_tag runner.image.key, style: 'height:100px; width:100px;margin-bottom:20px;', crop: :fill, class: "card-img-top" end %>
          <%= runner.first_name %><%= runner.last_name %>
          <%= runner.address %>
          <%= link_to "Send a buddy request",
                    runner_requests_path(runner),
                    method: :create,
                    data: { confirm: "Do you want to send a buddy request?" }%>
          <% end %>
    </div>

     <div class="col-md">
       <div id="map"
            style="width: 100%; height: 80vh;"
            data-markers="<%= @markers.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
       </div>
     </div>
  </div>
</div>