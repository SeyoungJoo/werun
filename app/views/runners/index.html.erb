<h1>Runners#index</h1>

<% @runners.each do |runner| %>
  <%= runner.first_name %><%= runner.last_name %><br>
  <%= runner.address %>
  <%= link_to "Send a buddy request",
            runner_requests_path(runner),
            method: :create,
            data: { confirm: "Do you want to send a buddy request?" }%>
<% end %>

<div id="map"
     class="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
