<div class="event-page">
<div class="event-container">
<h1 class="event-header">Book your running session with <%= @user2.first_name %></h1>

  <%= simple_form_for [ @user2, @event ], url: runner_events_path do |f| %>
    <%= f.input :location, as: :string %>
    <%= f.input :start_time, as: :string, required: true, input_html: {class: "datepicker"} %>
    <%= f.input :end_time, as: :string, required: true, input_html: {class: "datepicker"} %>
    <%= f.submit "Send request", class: "event-button" %>
  <% end %>
</div>
</div>
